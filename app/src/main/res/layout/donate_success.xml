<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B9E6">

    <Space
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="7"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.95"/>



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Donasi Berhasil"
            android:id="@+id/textView1"
            android:textSize="@dimen/txt_login"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PULSA ANDA TERPOTONG SEBESAR"
            android:id="@+id/textView3"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_size_normal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Rp 6000"
            android:id="@+id/potongan_pulsa"
            android:textSize="@dimen/txt_login"
            android:textColor="#004758"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PENERIMA"
            android:id="@+id/textView4"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_size_normal"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="#SaveMaster"
            android:id="@+id/nama_proyek"
            android:textColor="#004758"
            android:textSize="@dimen/txt_size_normal2" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="oleh Ginanjar Ibnu Solikhin "
            android:id="@+id/author_proyek"
            android:textColor="#004758"
            android:textSize="@dimen/txt_size_normal2"
            android:textStyle="italic" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_button_success"
            android:id="@+id/button_ok_sukses"
            android:src="@drawable/button_donate_success"
            android:scaleType="fitStart"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.95"/>


    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="7"/>




</LinearLayout>